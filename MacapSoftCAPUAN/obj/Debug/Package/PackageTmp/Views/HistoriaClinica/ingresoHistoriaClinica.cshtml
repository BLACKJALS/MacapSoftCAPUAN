
@{
    ViewBag.Title = "ingresoHistoriaClinica";
}

<div class="col-lg-12 jumbotron">
    @*style="border:dashed"*@
    <div class="container">
        <h3 style="text-align:center; background-color:#9BC2E6">Datos personales</h3>
        <div class="row">
            <div class="col-md-2">
                <label style="font-size:medium">Nombres:</label>
            </div>
            <div class="col-md-4">
                <input class="form-control" id="nombres" placeholder="Nombres" />
            </div>
            <div class="col-md-2">
                <label style="font-size:medium">Apellidos:</label>
            </div>
            <div class="col-md-4">
                <input class="form-control" id="apellidos" placeholder="Apellidos" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label style="font-size:medium">Dirección:</label>
            </div>
            <div class="col-md-4">
                <input class="form-control" id="direccion" placeholder="Dirección" />
            </div>
            <div class="col-md-2">
                <label style="font-size:medium">N° Teléfono:</label>
            </div>
            <div class="col-md-4">
                <input class="form-control" id="nTelefono" placeholder="Teléfono" />
            </div>
        </div>
    </div>
</div>
<div class="form-group">
    @*@Html.Partial("ListaSesiones")*@
    <body>
        <div class="container">
            @using (@Html.BeginForm("ingresoHistoriaClinica", "HistoriaClinica", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @*<h2>   </h2>*@
                <h3 align="center"><font size="16">Historias clínicas</font></h3>

                <p></p>
                @*<div id="toolbar">
                        <button id="button" class="btn btn-default">Paginación</button>
                    </div>*@
                <table id="table"
                       data-toggle="table"
                       data-search="true"
                       data-height="460"
                       data-detail-formatter="detailFormatter"
                       data-pagination="true"
                       data-page-size="20"
                       data-page-list="[20,50,100]"
                       data-pagination-first-text="Inicio"
                       data-pagination-pre-text="Anterior"
                       data-pagination-next-text="Siguiente"
                       data-pagination-last-text="Ultimo"
                       data-url='@Url.Action("ListarDiagnosticosCAP", "Diagnostico")'>
                    <thead>
                        <tr>
                            <th data-field="Codigo" class="clickable-row">Numero de cédula</th>
                            <th data-field="Nombre">Nombre paciente </th>
                            <th data-field="Destacado">Usuario asignado</th>
                            <th data-field="Operaciones" data-align="center" data-events="eventosOperaciones" data-formatter="formatoOperaciones">Operación modificar</th>
                        </tr>
                    </thead>
                </table>
                <div id="buttonPreRemove">
                    <button type="submit" id="btnEditar" style="visibility:hidden;"></button>
                </div>
            }
        </div>
        <div id="toolbar">
            @*<button type="submit" id="buttonBack" class="btn btn-default" onclick="return regresar();">Atrás</button>*@
            <input type="button" class="btn btn-primary" value="Regresar" onclick="location.href='@Url.Action("Index", "HistoriaClinica" )'" />
        </div>

    </body>

</div>

<div class="form-group">
    <div class="row">
        <div class="col-md-2">
            <input type="button" class="btn btn-default" value="Historia Clinica" />
        </div>
        <div class="col-md-4">
            <input type="button" class="btn btn-default" value="Cierre de caso" />
        </div>
    </div>
</div>
