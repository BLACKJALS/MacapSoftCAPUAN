@using MacapSoftCAPUAN.Models
@model RecuperarContraseñaViewModel
@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            var consecutivo = '@ViewBag.error';
            $("#error").val(consecutivo);
        });

        function obtenerNuevaContraseña() {
            var nuevaContraseña = $('#ContraseñaNueva').val()
            $("#nuevaContra").val(nuevaContraseña);
        }



    </script>

}

@{
    ViewBag.Title = "Recuperar constraseña";
}

<h2>@ViewBag.Title.</h2>
<div class="container">
    @using (@Html.BeginForm("RecuperarContraseña", "Account", FormMethod.Post, new { @class = "form-horizontal", id = "FormularioCambioCon" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("nuevaContra")
        <hr />
        @Html.ValidationSummary("La contraseña debe tener al menos 6 caracteres, al menos un carácter, letra y dígito ('0' - '9'), al menos una minúscula ('a' - 'z') y al menos una mayúscula ('A' - 'Z').", new { @class = "formf-control" })
        <label id="error"></label>
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <label>Ingrese el correo:</label>
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Correo", required = "true" })
                    @*<input type="text" id="Correo" class="form-control" placeholder="Correo" required />*@
                    @*@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })*@
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <label>Ingrese la nueva contraseña:</label>
                </div>
                <div class="col-md-2">
                    <input type="password" id="ContraseñaNueva" class="form-control" placeholder="Nueva contraseña" required />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-1">
                    <input type="button" class="btn btn-default" value="Regresar" onclick="location.href='@Url.Action("Index", "HistoriaClinica" )'" />
                </div>
                <div class="col-md-3">
                    <input type="submit" class="btn btn-primary" value="Aceptar" onclick="return obtenerNuevaContraseña();" />
                </div>
            </div>

        </div>
    }
</div>

