@using MacapSoftCAPUAN.Models
@model LoginViewModel
@section scripts{
    <script type="text/javascript">


        function obtenerNuevaContraseña() {
            var nuevaContraseña = $('#ContraseñaNueva').val()
            $("#nuevaContra").val(nuevaContraseña);
        }
        
        
    
    </script>    
   
}

@{
    ViewBag.Title = "Cambiar constraseña";
}

<h2>@ViewBag.Title.</h2>
<div class="container">
    @using (@Html.BeginForm("CambiarContraseña", "Account", FormMethod.Post, new { @class = "form-horizontal", id = "FormularioCambioCon" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("nuevaContra")
        <hr />
        @Html.ValidationSummary("La contraseña debe tener al menos 6 caracteres, al menos un carácter (#,$,%,&,/,(,),=,_,-), letra y dígito ('0' - '9'), al menos una minúscula ('a' - 'z') y al menos una mayúscula ('A' - 'Z').", new { @class = "formf-control" })
        <div style="color:red">
            @TempData["mensajeError"]
        </div>
        @*<p>@ViewBag.ErrorMessage</p>*@
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <label>Ingrese su antigua contraseña:</label>
                </div>
                <div class="col-md-2">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña", required="true" })
                    @*@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })*@
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <label>Ingrese su nueva contraseña:</label>
                </div>
                <div class="col-md-2">
                    <input type="password" id="ContraseñaNueva" class="form-control" placeholder="Nueva contraseña" required/>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-1">
                    <input type="button" class="btn btn-default" value="Regresar" onclick="location.href='@Url.Action("Index", "HistoriaClinica" )'" />
                </div>
                <div class="col-md-3">
                    <input type="submit" class="btn btn-primary" value="Aceptar" onclick="return obtenerNuevaContraseña();"/>
                </div>
            </div>

        </div>
    }
</div>

