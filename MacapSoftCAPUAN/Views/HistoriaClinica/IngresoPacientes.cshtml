        function dateFormatter(value, row) {
            if (value != "") {
                var date = new Date(parseInt(value.substr(6)));
                var formatted = ("0" + date.getDate()).slice(-2) + "-" + ("0" + (date.getMonth() + 1)).slice(-2) + "-" + date.getFullYear();
                return formatted;
            }
