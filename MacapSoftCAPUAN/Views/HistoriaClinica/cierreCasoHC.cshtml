
@{
    ViewBag.Title = "cierreCasoHC";
}

<h2 style="text-align:center">Cierre de caso</h2>
<div class="jumbotron">
    <div class="row">
        <div class="col-md-1">
            <label style="font-size:smaller">Fecha de cierre:</label>
        </div>
        <div class="col-md-4">
            <input class="form-control" id="fechaCierre" name="ingresoClinica.fechaIngreso" placeholder="fecha de cierre" onclick="return fechaHoy();" required />
        </div>
        <div class="col-md-2">
            <label style="font-size:smaller">Numero de HC:</label>
        </div>
        <div class="col-md-4">
            <input class="form-control" id="Consecutivo" name="consecutivo.numeroConsecutivo" placeholder="Numero de HC" required />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-1">
            <label style="font-size:smaller">Nombres:</label>
        </div>
        <div class="col-md-4">
            <input class="form-control" id="nombrePaciente" name="paciente.nombre" placeholder="Nombres" value="@ViewBag.nombre" required />
        </div>
        <div class="col-md-2">
            <label style="font-size:smaller">Apellidos:</label>
        </div>
        <div class="col-md-4">
            <input class="form-control" id="apellidoPaciente" name="paciente.apellido" placeholder="Apellidos" value="@ViewBag.apellido" required />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">
            <label style="font-size:smaller">Numero de documento:</label>
        </div>
        <div class="col-md-4">
            <input class="form-control" id="numeroDocumentoPaciente" name="paciente.numeroDocumento" placeholder="numero documento" value="@ViewBag.numeroDocumento" required />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-1">
            <label style="font-size:smaller">Fecha de nacimiento:</label>
        </div>
        <div class="col-md-2">
            <input class="form-control" id="fechaNacimientoPaciente" name="paciente.fechaNacimiento" placeholder="fecha de nacimiento" required />
        </div>
        <div class="col-md-1">
            <label style="font-size:smaller">Edad:</label>
        </div>
        <div class="col-md-2">
            <input class="form-control" id="edadPaciente" name="paciente.edad" placeholder="Edad (años)" onclick="return validarEdad();" value="@ViewBag.edad" required />
        </div>
        <div class="col-md-1">
            <label style="font-size:smaller">Profesión:</label>
        </div>
        <div class="col-md-2">
            <input class="form-control" id="pacienteProfesion" name="paciente.id_profesion" placeholder="Profesión" value="" required />
        </div>
        <div class="col-md-1">
            <label style="font-size:smaller">Ocupación:</label>
        </div>
        <div class="col-md-2">
            <input class="form-control" id="ocupacion" name="paciente.sexo" placeholder="Ocupación" value="@ViewBag.ocupación" required />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-1">
            <label style="font-size:smaller">Escolaridad:</label>
        </div>
        <div class="col-md-2">
            <input class="form-control" id="pacienteProfesion" name="paciente.id_profesion" placeholder="Escolaridad" value="" required />
        </div>
        <div class="col-md-1">
            <label style="font-size:smaller">Remitido por:</label>
        </div>
        <div class="col-md-2">
            <input class="form-control" id="ocupacion" name="paciente.sexo" placeholder="Remitido por" value="@ViewBag.ocupación" required />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-1">
            <label style="font-size:smaller">Escolaridad:</label>
        </div>
        <div class="col-md-3">
            <input class="form-control" id="pacienteProfesion" name="paciente.id_profesion" placeholder="Escolaridad" value="" required />
        </div>
        <div class="col-md-1">
            <label style="font-size:smaller">Remitido por:</label>
        </div>
        <div class="col-md-3">
            <input class="form-control" id="ocupacion" name="paciente.sexo" placeholder="Remitido por" value="@ViewBag.ocupación" required />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">
            <label style="font-size:smaller">Fecha inicio psicoterapia:</label>
        </div>
        <div class="col-md-2">
            <input type="text" class="form-control" id="fechaRemision" onclick="return fechaHoy();" />
        </div>
        <div class="col-md-2">
            <label style="font-size:smaller">Fecha fin de la psicoterapia:</label>
        </div>
        <div class="col-md-2">
            <input class="form-control" id="fechaIniPsico" placeholder="Fecha inicio psicoterapia" required />
            @*<input type="text" class="form-control" id="fechaRemision" onclick="return fechaHoy();"/>*@
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">
            <label style="font-size:smaller">Número de citas asignadas:</label>
        </div>
        <div class="col-md-2">
            <input class="form-control" id="pacienteProfesion" name="paciente.id_profesion" placeholder="Número de citas asignadas" value="" required />
        </div>
        <div class="col-md-2">
            <label style="font-size:smaller">Sesiones realizadas:</label>
        </div>
        <div class="col-md-2">
            <input class="form-control" id="ocupacion" name="paciente.sexo" placeholder="Sesiones realizadas" value="" required />
        </div>
        <div class="col-md-2">
            <label style="font-size:smaller">Inasistencias:</label>
        </div>
        <div class="col-md-2">
            <input class="form-control" id="ocupacion" name="paciente.sexo" placeholder="Inasistencias" value="" required />
        </div>
    </div>
    <br />
</div>
<h3 style="text-align:center">Motivo cierre</h3>
<div class="row">
    <div class="col-md-4">
        <label style="font-size:medium">Acuerdo entre consultante y terapeuta:</label>
    </div>
    <div class="col-md-1">
        <input type="checkbox" id="IntentoSuicida" value="5" name="remision.motivoRemision.idMotivoRemision">
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <label style="font-size:medium">Logro de objetivos:</label>
    </div>
    <div class="col-md-1">
        <input type="checkbox" id="Abuso" value="2" name="remision.motivoRemision.idMotivoRemision" />
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <label style="font-size:medium">Retiro por consideración del consultante:</label>
    </div>
    <div class="col-md-1">
        <input type="checkbox" id="psicosis" value="1" name="remision.motivoRemision.idMotivoRemision" />
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <label style="font-size:medium">Consumo de estupefacientes:</label>
    </div>
    <div class="col-md-1">
        <input type="checkbox" id="consumo" value="3" name="remision.motivoRemision.idMotivoRemision" />
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <label style="font-size:medium">Abandono de las sesiones por parte del consultante:</label>
    </div>
    <div class="col-md-1">
        <input type="checkbox" id="violencia" value="4" name="remision.motivoRemision.idMotivoRemision" />
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <label style="font-size:medium">Cierre por decisión del terapeuta:</label>
    </div>
    <div class="col-md-1">
        <input type="checkbox" id="violencia" value="4" name="remision.motivoRemision.idMotivoRemision" />
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <label style="font-size:medium">Por término del semestre:</label>
    </div>
    <div class="col-md-1">
        <input type="checkbox" id="violencia" value="4" name="remision.motivoRemision.idMotivoRemision" />
    </div>
</div>
<br />
<div class="form-group">
    <textarea class="form-control" style="min-width: 100%" rows="6" id="Observaciones" name="ingresoClinica.observaciones" value="'@ViewBag.Observaciones" required></textarea>
</div>
<br />
<h3 style="text-align:center">Evolución de la intervención psicológica</h3>
<br />
<div class="form-group">
    <div class="col-md-6">
        <label style="font-size:medium">Logros alcanzados con base en los objetivos terapéuticos:</label>
    </div>
    <div class="form-group">
        <textarea class="form-control" style="min-width: 100%" rows="6" id="Observaciones" name="ingresoClinica.observaciones" value="'@ViewBag.Observaciones" required></textarea>
    </div>
</div>
<div class="form-group">
    <div class="col-md-4">
        <label style="font-size:medium">Logros alcanzados según el consultante:</label>
    </div>
    <div class="form-group">
        <textarea class="form-control" style="min-width: 100%" rows="6" id="Observaciones" name="ingresoClinica.observaciones" value="'@ViewBag.Observaciones" required></textarea>
    </div>
</div>
<div class="form-group">
    <div class="col-md-4">
        <label style="font-size:medium">Observaciones y recomendaciones:</label>
    </div>
    <div class="form-group">
        <textarea class="form-control" style="min-width: 100%" rows="6" id="Observaciones" name="ingresoClinica.observaciones" value="'@ViewBag.Observaciones" required></textarea>
    </div>
</div>

<div class="form-group">
    <div class="col-md-2">
        <input type="submit" value="Guardar" class="form-control btn-primary" id="guardarHistoria" />
    </div>
    <div class="col-md-2">
        <input type="button" value="Cancelar" class="form-control" onclick="location.href='@Url.Action("Index", "HistoriaClinica")'" />
    </div>
</div>