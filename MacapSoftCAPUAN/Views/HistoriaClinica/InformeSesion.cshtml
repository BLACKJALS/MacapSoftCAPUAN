
@{
    ViewBag.Title = "InformeSesion";
}

<h1 style="text-align:center">Informe sesión</h1>
<div class="container">
    <div class="row">
        <div class="col-md-1">
            <label style="font-size:smaller">Fecha actual:</label>
        </div>
        <div class="col-md-2">
            <input class="form-control" placeholder="Fecha actual" />
        </div>
        <div class="col-md-1">
            <label style="font-size:smaller">N° Historia:</label>
        </div>
        <div class="col-md-2">
            <input class="form-control" placeholder="N° Historia" />
        </div>
        <div class="col-md-1">
            <label style="font-size:smaller">N° Sesión:</label>
        </div>
        <div class="col-md-2">
            <input class="form-control" placeholder="N° sesión" />
        </div>
        <div class="col-md-1">
            <label style="font-size:smaller">Recibo de pago:</label>
        </div>
        <div class="col-md-2">
            <input class="form-control" placeholder="Recibo pago" />
        </div>
    </div>

    <h4 style="text-align:center; background-color:#9BC2E6">Objetivo de la sesión</h4>
    <div class="form-group">
        <textarea class="form-control" style="min-width: 100%" rows="6"></textarea>
    </div>
    <h4 style="text-align:center; background-color:#9BC2E6">Ejercicios y eventos significativos de la semana anterior</h4>
    <div class="form-group">
        <textarea class="form-control" style="min-width: 100%" rows="6"></textarea>
    </div>
    <h4 style="text-align:center; background-color:#9BC2E6">Desarrollo y temas tratados durante la sesión</h4>
    <div class="form-group">
        <textarea class="form-control" style="min-width: 100%" rows="6"></textarea>
    </div>
    <h4 style="text-align:center; background-color:#9BC2E6">Proxima sesión (Tareas, ejercicios, comentarios de la formulación y/o modificaciones)</h4>
    <div class="form-group">
        <textarea class="form-control" style="min-width: 100%" rows="6"></textarea>
    </div>
    <h4 style="text-align:center; background-color:#9BC2E6">Observaciones</h4>
    <div class="form-group">
        <textarea class="form-control" style="min-width: 100%" rows="6"></textarea>
    </div>

    <div class="form-group">
        <div class="col-md-2">
            <input type="submit" value="Guardar" class="form-control btn btn-primary" />
        </div>
        <div class="col-md-2">
            <input type="submit" value="Cancelar" class="form-control" onclick="location.href='@Url.Action("historiaClinica", "HistoriaClinica" )'" />
        </div>
    </div>
</div>
