
@{
    ViewBag.Title = "Ingreso paciente";
}

@section Scripts{
<script>
    function validarIdentificacion(){
        var numeroC = $("#cedula").val();
        $("#identificacion").val(numeroC);
    }

</script>

}



<h2>Validación del paciente</h2>
<br />
<br />
<br />
<div class="container">
    @using (Html.BeginForm("IngresoPacientes", "HistoriaClinica", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    { 
    @Html.Hidden("identificacion")
    <div class="form-group">
        <div class="row">
            <div class="col-md-3">
                <label>Ingrese número de cédula:</label>
            </div>
            <div class="col-md-3">
                <input type="text" id="cedula" class="form-control" placeholder="Ingrese un número de identificación." required/>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-1">
                <input type="submit" id="aceptar" class="btn btn-primary" onclick="return validarIdentificacion();" />
            </div>
            <div class="col-md-2">
                <input type="button" class="btn btn-primary" value="Regresar" onclick="location.href='@Url.Action("Index", "HistoriaClinica")'" />
            </div>
        </div>
    </div>
    }
    
</div>
